generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// enum

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
  CANCELED
  REFUND
}

enum PaymentProvider {
  MIDTRANS
}

// model

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  create_at DateTime @default(now())
  singedIn  DateTime @updatedAt

  // relation
  profile Profile?
  payments  Payment[]
}

model Payment {
  id            String   @id @default(uuid())
  token     String   @unique  // Ini token "magic"-nya
  amount        Int
  status        String   @default("PENDING") // PENDING, PAID, FAILED
  provider      String   @default("MAYAR")
  mayarId       String?  // ID dari Mayar (jika ada)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model MagicLink {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model highLight {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  // relation
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id])
}

model Profile {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  avatarUrl String?
  bio       String?
  create_at DateTime @default(now())
  isPro Boolean @default(false)


  // relation
  userId     String      @unique
  user       User        @relation(fields: [userId], references: [id])
  highLights highLight[]
  widgets    widget[]
  orders     Order[]
}

model widget {
  id         String   @id @default(uuid())
  token      String
  link       String?
  name String?
  dbID       String   @unique
  create_at  DateTime @default(now())
  
  // relation
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id])
}

model Order {
  id      String @id @default(uuid())
  orderId String @unique @db.VarChar(50)
  userId  String @db.Uuid

  amount   Int // simpan dalam satuan terkecil (rupiah)
  status   PaymentStatus   @default(PENDING)
  provider PaymentProvider @default(MIDTRANS)

  snapToken     String? @db.VarChar(255)
  transactionId String? @db.VarChar(100)

  rawNotification Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id])
}
